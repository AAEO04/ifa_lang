// ═══════════════════════════════════════════════════════════════════════════
// TEST_OBARA.IFA - Unit Tests for Ọ̀bàrà (Math) Domain
// Demonstrates BOTH Yoruba and English syntax
// ═══════════════════════════════════════════════════════════════════════════

ìbà Irosu;    // Yoruba import
import Obara; // English import
ìbà Okanran;

// ═══════════════════════════════════════════════════════════════════════════
// TEST: fikun() / add() - Addition
// ═══════════════════════════════════════════════════════════════════════════

ese test_fikun() {                              // Yoruba: ese = function
    ayanmọ result = Obara.fikun(10, 5);         // Yoruba variable
    Okanran.daju(15, result, "fikun() should add numbers");
    
    let neg = Obara.fikun(-5, 3);               // English variable
    Okanran.daju(-2, neg, "fikun() should handle negatives");
    Irosu.fo("✓ test_fikun passed");
}

// ═══════════════════════════════════════════════════════════════════════════
// TEST: isodipupo() / so() / multiply() - Multiplication
// ═══════════════════════════════════════════════════════════════════════════

fn test_isodipupo() {                           // English: fn = function
    ayanmọ result = Obara.isodipupo(7, 6);      // Full Yoruba name
    Okanran.daju(42, result, "isodipupo() should multiply");
    
    let alias = Obara.so(3, 4);                 // Short alias
    Okanran.daju(12, alias, "so() alias should multiply");
    Irosu.fo("✓ test_isodipupo passed");
}

// ═══════════════════════════════════════════════════════════════════════════
// TEST: agbara() / power() - Exponentiation
// ═══════════════════════════════════════════════════════════════════════════

ese test_agbara() {
    ayanmọ result = Obara.agbara(2, 10);
    Okanran.daju(1024, result, "agbara() should compute power");
    
    let square = Obara.agbara(5, 2);
    Okanran.daju(25, square, "agbara() should square");
    Irosu.fo("✓ test_agbara passed");
}

// ═══════════════════════════════════════════════════════════════════════════
// TEST: gbongbo() / sqrt() - Square Root
// ═══════════════════════════════════════════════════════════════════════════

fn test_gbongbo() {
    let result = Obara.gbongbo(16);
    Okanran.daju(4, result, "gbongbo() should compute sqrt");
    
    ayanmọ sqrt9 = Obara.gbongbo(9);
    Okanran.daju(3, sqrt9, "gbongbo() of 9 should be 3");
    Irosu.fo("✓ test_gbongbo passed");
}

// ═══════════════════════════════════════════════════════════════════════════
// TEST: ile() / orule() - Floor / Ceil
// ═══════════════════════════════════════════════════════════════════════════

ese test_rounding() {
    ayanmọ floor = Obara.ile(3.7);   // Yoruba: ile = floor (house/ground)
    Okanran.daju(3, floor, "ile() should floor");
    
    let ceil = Obara.orule(3.2);     // Yoruba: orule = ceil (rooftop)
    Okanran.daju(4, ceil, "orule() should ceil");
    Irosu.fo("✓ test_rounding passed");
}

// ═══════════════════════════════════════════════════════════════════════════
// TEST: abs() - Absolute Value
// ═══════════════════════════════════════════════════════════════════════════

fn test_abs() {
    let pos = Obara.abs(-42);
    Okanran.daju(42, pos, "abs() should return positive");
    
    ayanmọ same = Obara.abs(10);
    Okanran.daju(10, same, "abs() of positive stays same");
    Irosu.fo("✓ test_abs passed");
}

// ═══════════════════════════════════════════════════════════════════════════
// TEST: apapo() / sum() - Sum of List
// ═══════════════════════════════════════════════════════════════════════════

ese test_apapo() {
    ayanmọ total = Obara.apapo([1, 2, 3, 4, 5]);  // Yoruba: apapo = sum/total
    Okanran.daju(15, total, "apapo() should sum list");
    Irosu.fo("✓ test_apapo passed");
}

// ═══════════════════════════════════════════════════════════════════════════
// RUN ALL TESTS
// ═══════════════════════════════════════════════════════════════════════════

Irosu.fo("═══ Running Ọ̀bàrà (Math) Tests ═══");
Irosu.fo("Demonstrating dual Yoruba/English syntax\n");

test_fikun();
test_isodipupo();
test_agbara();
test_gbongbo();
test_rounding();
test_abs();
test_apapo();

Irosu.fo("\n═══ All Ọ̀bàrà tests passed! ═══");
àṣẹ;

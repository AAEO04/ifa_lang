// ═══════════════════════════════════════════════════════════════════════════
// OOP_TEST.IFA - Object-Oriented Programming
// Demonstrates BOTH Yoruba and English syntax
// ═══════════════════════════════════════════════════════════════════════════

ìbà Irosu;  // Yoruba import

// ═══════════════════════════════════════════════════════════════════════════
// CLASS DEFINITION: odù (Yoruba) = class (English)
// ═══════════════════════════════════════════════════════════════════════════

odù Dog {                          // Yoruba: odù = class/domain
    ayanmọ name = "";              // Yoruba: ayanmọ = field
    let hunger = 100;              // English: let = field (both work!)

    // Constructor: dá = create
    ese dá(n) {                    // Yoruba: ese = function/method
        name = n;
    }

    // Method: speak
    fn speak() {                   // English: fn = function (both work!)
        Irosu.fo(name + " says Woof!");
    }

    // Method: eat
    ese eat() {                    // Yoruba: ese
        hunger = hunger - 10;
        Irosu.fo(name + " ate. Hunger: " + hunger);
    }

    // Method: status
    fn status() {                  // English: fn
        ti hunger < 50 {           // Yoruba: ti = if
            Irosu.fo(name + " is hungry!");
        } else {                   // English: else
            Irosu.fo(name + " is satisfied.");
        }
    }
}

// ═══════════════════════════════════════════════════════════════════════════
// CREATE INSTANCE
// ═══════════════════════════════════════════════════════════════════════════

ayanmọ my_dog = Dog.dá("Bingo");   // Yoruba variable + constructor

// Call methods
my_dog.speak();
my_dog.eat();
my_dog.eat();
my_dog.status();

// Access field
Irosu.fo("Final hunger level: " + my_dog.hunger);

àṣẹ;  // Yoruba: end

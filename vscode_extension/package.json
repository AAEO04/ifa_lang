{
  "name": "ifa-lang",
  "displayName": "If치 Language",
  "description": "The Yoruba Programming Language - Official Extension with syntax highlighting, intellisense, and debugging",
  "version": "1.2.0",
  "license": "MIT",
  "publisher": "IfaLang",
  "author": {
    "name": "Ayomide Alli",
    "url": "https://github.com/AAEO04"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AAEO04/ifa-lang"
  },
  "homepage": "https://github.com/AAEO04/ifa-lang",
  "bugs": {
    "url": "https://github.com/AAEO04/ifa-lang/issues"
  },
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#1a1a2e",
    "theme": "dark"
  },
  "keywords": [
    "ifa",
    "yoruba",
    "programming language",
    "african",
    "odu",
    "if치",
    "sandbox",
    "capability",
    "security"
  ],
  "badges": [
    {
      "url": "https://img.shields.io/github/license/AAEO04/ifa-lang",
      "href": "https://github.com/AAEO04/ifa-lang/blob/main/LICENSE",
      "description": "License"
    }
  ],
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "ifa",
        "aliases": [
          "If치",
          "ifa"
        ],
        "extensions": [
          ".ifa",
          ".if치"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ifa",
        "scopeName": "source.ifa",
        "path": "./syntaxes/ifa.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "ifa",
        "path": "./snippets/ifa.code-snippets"
      }
    ],
    "commands": [
      {
        "command": "ifa.run",
        "title": "Ifa: Run Current File",
        "icon": "$(play)"
      },
      {
        "command": "ifa.runSandboxWasm",
        "title": "Ifa: Run in WASM Sandbox",
        "icon": "$(shield)"
      },
      {
        "command": "ifa.runSandboxNative",
        "title": "Ifa: Run in Native Sandbox",
        "icon": "$(lock)"
      },
      {
        "command": "ifa.repl",
        "title": "Ifa: Open REPL"
      },
      {
        "command": "ifa.format",
        "title": "Ifa: Format Document"
      },
      {
        "command": "ifa.restartServer",
        "title": "Ifa: Restart Language Server"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Ifa-Lang",
      "properties": {
        "ifa.path": {
          "type": "string",
          "default": "ifa",
          "description": "Path to ifa executable"
        },
        "ifa.languageServer.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable the Ifa language server"
        },
        "ifa.languageServer.path": {
          "type": "string",
          "default": "",
          "description": "Path to ifa-lsp executable (leave empty to use bundled)"
        },
        "ifa.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Trace communication with the language server"
        }
      }
    },
    "keybindings": [
      {
        "command": "ifa.run",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorLangId == ifa"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "editorLangId == ifa",
          "command": "ifa.run",
          "group": "navigation"
        }
      ]
    },
    "debuggers": [
      {
        "type": "ifa",
        "label": "Ifa Debugger",
        "program": "./out/extension.js",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Ifa file to debug",
                "default": "${workspaceFolder}/${command:AskForProgramName}"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch.",
                "default": true
              },
              "trace": {
                "type": "boolean",
                "description": "Enable logging of the Debug Adapter Protocol.",
                "default": true
              },
              "sandbox": {
                "type": "string",
                "enum": [
                  "none",
                  "wasm",
                  "native"
                ],
                "description": "Sandbox mode: none (default), wasm (WASM sandbox), native (OS sandbox)",
                "default": "none"
              },
              "capabilities": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Permissions to grant (e.g., ['read', 'write', 'net'])",
                "default": []
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "ifa",
            "request": "launch",
            "name": "Launch Ifa Program",
            "program": "${workspaceFolder}/examples/demo.ifa",
            "stopOnEntry": true
          },
          {
            "type": "ifa",
            "request": "launch",
            "name": "Launch (WASM Sandbox)",
            "program": "${workspaceFolder}/examples/demo.ifa",
            "stopOnEntry": true,
            "sandbox": "wasm"
          },
          {
            "type": "ifa",
            "request": "launch",
            "name": "Launch (Native Sandbox)",
            "program": "${workspaceFolder}/examples/demo.ifa",
            "stopOnEntry": true,
            "sandbox": "native",
            "capabilities": [
              "read",
              "write"
            ]
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "^16.11.7",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  }
}
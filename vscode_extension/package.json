{
  "name": "ifa-lang",
  "displayName": "Ifá Language",
  "description": "The Yoruba Programming Language - Official Extension",
  "version": "0.1.1",
  "license": "MIT",
  "publisher": "IfaLang",
  "repository": {
    "type": "git",
    "url": "https://github.com/AAEO04/ifa-lang"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "ifa",
        "aliases": [
          "Ifá",
          "ifa"
        ],
        "extensions": [
          ".ifa"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ifa",
        "scopeName": "source.ifa",
        "path": "./syntaxes/ifa.tmLanguage.json"
      }
    ],
    "debuggers": [
      {
        "type": "ifa",
        "label": "Ifá Debugger (Babalawo)",
        "program": "./out/extension.js",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Ifá file to debug",
                "default": "${workspaceFolder}/${command:AskForProgramName}"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch.",
                "default": true
              },
              "trace": {
                "type": "boolean",
                "description": "Enable logging of the Debug Adapter Protocol.",
                "default": true
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "ifa",
            "request": "launch",
            "name": "Launch Ifá Program",
            "program": "${workspaceFolder}/examples/demo.ifa",
            "stopOnEntry": true
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "^16.11.7",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  }
}